Program 1 :
#include <iostream>
using namespace std;

int main() {
  int n;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while(i <= n) {
    int j = 1;
    while(j <= n) {
      cout << n - j + 1;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output : 
Hello World!
3
321
321
321

Program 2 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      cout << count;
      count = count + 1;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
3
123
456
789

Program 3 : 
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= i) {
      cout << "*";
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
4
*
**
***
****

