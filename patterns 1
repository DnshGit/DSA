Program 5 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= i) {
      cout << i - j + 1;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
4
1
21
321
4321

Program 6 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= i) {
      char ch = 'A' + i - 1;
      cout << ch;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
4
A
BB
CCC
DDDD

Program 7 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      char ch = 'A' + i - 1;
      cout << ch;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
