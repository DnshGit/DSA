Program 9 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      char ch = 'A' + count - 1;
      cout << ch;
      count = count + 1;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
3
ABC
DEF
GHI

Program 10 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      char ch = 'A' + i + j - 2;
      cout << ch;
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
3
ABC
BCD
CDE
