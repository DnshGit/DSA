Program 15 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      if (j <= n - i) {
        cout << " ";
      } else {
        cout << count;
        count = count + 1;
      }
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
3
  1
 23
456

Program 16 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      if (j <= n - i) {
        cout << " ";
      } else {
        cout << i + j - n;
      }
      j = j + 1;
    }
    j = 1;
    while (j <= n) {
      if (j < i) {
        cout << i - j;
      }
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
4
   1
  121
 12321
1234321

Program 17 :
#include <iostream>
using namespace std;

int main() {
  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      if (j <= n - i + 1) {
        cout << j;
      } else {
        cout << "*";
      }
      j = j + 1;
    }
    while (j > 1) {
      j = j - 1;
      if (j <= n - i + 1) {
        cout << j;
      } else {
        cout << "*";
      }
    }
    cout << endl;
    i = i + 1;
  }
}

output :
Hello World!
5
1234554321
1234**4321
123****321
12******21
1********1

