  int n;
  int count = 1;
  cout << "Hello World!\n";
  cin >> n;
  int i = 1;
  while (i <= n) {
    int j = 1;
    while (j <= n) {
      if (j < i) {
        cout << " ";
      } else {
        cout << i;
      }
      j = j + 1;
    }
    cout << endl;
    i = i + 1;
  }
}

